@model Project_ARM_MVC.Models.Content

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}







<div class="card text-white bg-primary mb-3" style="max-width: 50rem; margin-top:30px; margin-bottom:0px; margin-left:250px; margin-right:0px;">

    <form method="post" action="@Url.Action("Create")" enctype="multipart/form-data">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3 class="card-header text-center">เพิ่มข้อมูล</h3>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-top:0px; margin-bottom:20px; margin-left:20px; margin-right:0px;">
                @Html.LabelFor(model => model.Content_CategoryID, "ชื่อหัวข้อ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownList("Content_CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Content_CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:0px; margin-bottom:20px; margin-left:20px; margin-right:0px;">
                @Html.LabelFor(model => model.Content_Name, "ชื่อเนื้อหา", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Content_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content_Name, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group" style="margin-top:0px; margin-bottom:20px; margin-left:20px; margin-right:0px;">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-warning" value="Create">Create</button>
                </div>
            </div>
        </div>
        }
    </form>

</div>

<div style=" text-align:center;">
    <a href="@Url.Action("Index","Contents")"><button type="button" class="btn btn-info">กลับ</button></a>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}