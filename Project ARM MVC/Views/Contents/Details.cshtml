@model Project_ARM_MVC.Models.Content

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<br />
<div style="border: 2px solid black; border-radius:20px; background-color: rgb(247, 113, 36); margin-left:450px; margin-right:450px;">
    <h3 style="text-align:center;">
        ข้อมูล
    </h3>
       
</div>
<br />

<div class="card text-white bg-primary mb-3" style=" max-width: 50rem; margin-top:30px; margin-bottom:0px; margin-left:auto; margin-right:auto;" ">


    <div class="card-body">
        <div style="border: 2px solid black; border-radius:20px; background-color:darkturquoise; margin-left:1px; margin-right:650px;">
            <h4 style="text-align:center; padding-top:5px; color:black;">
                ชื่อ
            </h4>

        </div>
        <h4 class="card-title" style="margin-left:20px; color:black;"> @Html.DisplayFor(model => model.Content_Name)</h4>

        <br />
        <div style="border: 2px solid black; border-radius:20px; background-color:darkturquoise; margin-left:1px; margin-right:650px;">
            <h4 style="text-align:center; padding-top:5px; color:black;">
                ข้อมูล
            </h4>

        </div>
        <h4 class="card-title"  style="margin-left:20px; color:black;">@Html.DisplayFor(model => model.Content_Data)</h4>
        <br />
        <div style="border: 2px solid black; border-radius:20px; background-color:darkturquoise; margin-left:1px; margin-right:650px;">
            <h4 style="text-align:center; padding-top:5px; color:black;">
                รูป
            </h4>

        </div>
        <div class="card" style="width: 20rem; background-color:cornflowerblue; margin-left:auto; margin-right:auto;">

            @if (Model.Content_Image != null)
            {
                <br />
                <div style="text-align:center;">
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Content_Image) " width="200" style="border-radius: 10px; margin-top:1px; margin-bottom:20px;">
                </div>

            }
        </div>
    </div>
   
    
</div>
<div style="text-align:center;">
    <a href="@Url.Action("Index","Contents")"><button type="button" class="btn btn-info">กลับ</button></a>

</div>
<br />
