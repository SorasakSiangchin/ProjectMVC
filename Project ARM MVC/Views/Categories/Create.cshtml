@model Project_ARM_MVC.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}







<div class="card text-white bg-primary mb-3" style="text-align:center; max-width: 50rem; margin-top:30px; margin-bottom:0px; margin-left:250px; margin-right:0px;">

    <form method="post" action="@Url.Action("Create")" enctype="multipart/form-data">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 class="card-header text-center">เพิ่มข้อมูล</h3>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="padding-top:10px;">
                    <p style="color:white; margin-left:-680px; margin-right:1px;">หัวข้อเรื่อง</p>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Category_Data, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Category_Data, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-left:1px; margin-right:700px;">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-warning" value="Create">Create</button>
                    </div>
                </div>
            </div>
        }
    </form>

</div>

<div style="text-align:center;">
    <a href="@Url.Action("Index","Categories")"><button type="button" class="btn btn-info">กลับ</button></a>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
